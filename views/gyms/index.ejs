<% layout('layout/boilerplate') %> 
    <ul>
        <div class="row">
        <% for (let gym of gyms){ %>
            <div class="col-md-6 col-lg-4">
            <div class="card mb-3 bg-dark text-white">
                <% if(gym.images.length){ %> 
                    <img class="img-fluid" src="<%= gym.images[0].url %> " alt="">
                    <% }else{ %> 
                        <img class="img-fluid" src="https://res.cloudinary.com/dng3udoi7/image/upload/v1646136488/FitHit/default_ax1zm6.jpg" alt="">
                        <% } %> 
                <div class="card-body">
                    <h5 class="card-title"><%= gym.title %> </h5>
                    <p class="card-text">
                        <% if(gym.description.length > 200){ %> 
                          <p> <%= gym.description.substring(0,200)%> ... </p> 
                          <% }else{ %> 
                            <p> <%= gym.description%> </p>
                            <% } %> 
                    </p>
                    <p class="card-text">
                        <small class="text-muted"><%= gym.location %> </small>
                    </p>
                    <a class="btn btn-primary" href="/gyms/<%= gym._id %> ">View <%= gym.title %></a>
                </div>
              </div>
            </div>
        <% } %> 
    </div>
    </ul>
    

    
    